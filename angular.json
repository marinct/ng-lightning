{
    "$schema": "./node_modules/@angular/cli/lib/config/schema.json",
    "version": 1,
    "newProjectRoot": "projects",
    "projects": {
        "ng-lightning-app": {
            "root": "",
            "sourceRoot": "src",
            "projectType": "application",
            "prefix": "app",
            "schematics": {},
            "architect": {
                "build": {
                    "builder": "@angular-devkit/build-angular:application",
                    "options": {
                        "outputPath": {
                            "base": "dist/ng-lightning-app",
                            "browser": ""
                        },
                        "index": "src/index.html",
                        "polyfills": [
                            "src/polyfills.ts"
                        ],
                        "tsConfig": "src/tsconfig.app.json",
                        "assets": [
                            "src/favicon.ico",
                            "src/assets",
                            {
                                "glob": "**/*",
                                "input": "node_modules/@salesforce-ux/design-system/assets/",
                                "output": "/assets"
                            }
                        ],
                        "styles": [
                            "node_modules/@salesforce-ux/design-system/assets/styles/salesforce-lightning-design-system.min.css",
                            "node_modules/prismjs/themes/prism.css",
                            "node_modules/@angular/cdk/overlay-prebuilt.css",
                            "src/styles.scss"
                        ],
                        "scripts": [],
                        "extractLicenses": false,
                        "sourceMap": true,
                        "optimization": false,
                        "namedChunks": true,
                        "browser": "src/main.ts"
                    },
                    "configurations": {
                        "production": {
                            "budgets": [{
                                "type": "anyComponentStyle",
                                "maximumWarning": "6kb"
                            }],
                            "fileReplacements": [{
                                "replace": "src/environments/environment.ts",
                                "with": "src/environments/environment.prod.ts"
                            }],
                            "optimization": true,
                            "outputHashing": "all",
                            "sourceMap": false,
                            "namedChunks": false,
                            "extractLicenses": true
                        }
                    }
                },
                "serve": {
                    "builder": "@angular-devkit/build-angular:dev-server",
                    "options": {
                        "buildTarget": "ng-lightning-app:build"
                    },
                    "configurations": {
                        "production": {
                            "buildTarget": "ng-lightning-app:build:production"
                        }
                    }
                },
                "extract-i18n": {
                    "builder": "@angular-devkit/build-angular:extract-i18n",
                    "options": {
                        "buildTarget": "ng-lightning-app:build"
                    }
                },
                "test": {
                    "builder": "@angular-devkit/build-angular:karma",
                    "options": {
                        "main": "src/test.ts",
                        "polyfills": "src/polyfills.ts",
                        "tsConfig": "src/tsconfig.spec.json",
                        "karmaConfig": "src/karma.conf.js",
                        "styles": ["src/styles.css"],
                        "scripts": [],
                        "assets": ["src/favicon.ico", "src/assets"]
                    }
                },
                "lint": {
                    "builder": "@angular-eslint/builder:lint",
                    "options": {
                        "lintFilePatterns": ["src/app/**/*.ts", "src/app/**/*.pug"]
                    }
                }
            }
        },
        "ng-lightning-app-e2e": {
            "root": "e2e/",
            "projectType": "application",
            "architect": {
                "e2e": {
                    "builder": "@angular-devkit/build-angular:protractor",
                    "options": {
                        "protractorConfig": "e2e/protractor.conf.js",
                        "devServerTarget": "ng-lightning-app:serve"
                    },
                    "configurations": {
                        "production": {
                            "devServerTarget": "ng-lightning-app:serve:production"
                        }
                    }
                },
                "lint": {
                    "builder": "@angular-eslint/builder:lint",
                    "options": {
                        "lintFilePatterns": ["e2e/src/**/*.ts", "e2e/src/**/*.pug"]
                    }
                }
            }
        },
        "ng-lightning": {
            "root": "projects/ng-lightning",
            "sourceRoot": "projects/ng-lightning/src",
            "projectType": "library",
            "prefix": "ngl",
            "architect": {
                "build": {
                    "builder": "@angular-devkit/build-angular:ng-packagr",
                    "options": {
                        "tsConfig": "projects/ng-lightning/tsconfig.lib.json",
                        "project": "projects/ng-lightning/ng-package.json"
                    },
                    "configurations": {
                        "production": {
                            "tsConfig": "projects/ng-lightning/tsconfig.lib.prod.json"
                        }
                    }
                },
                "test": {
                    "builder": "@angular-devkit/build-angular:karma",
                    "options": {
                        "main": "projects/ng-lightning/src/test.ts",
                        "polyfills": "projects/ng-lightning/test/polyfills.ts",
                        "tsConfig": "projects/ng-lightning/tsconfig.spec.json",
                        "karmaConfig": "projects/ng-lightning/karma.conf.js"
                    },
                    "configurations": {
                        "github": {
                            "codeCoverage": true,
                            "watch": false,
                            "browsers": "ChromeHeadless"
                        }
                    }
                },
                "lint": {
                    "builder": "@angular-eslint/builder:lint",
                    "options": {
                        "lintFilePatterns": ["projects/ng-lightning/src/**/*.ts", "projects/ng-lightning/src/**/*.pug"]
                    }
                }
            }
        }
    }
}